{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "openai": {
      "whitelist": ["gpt-5.2", "gpt-5.2-codex"],
      "options": {
        "reasoning": true,
        "reasoningEffort": "medium",
        "reasoningSummary": "auto",
        "textVerbosity": "medium",
        "include": ["reasoning.encrypted_content"],
        "store": false
      },
      "models": {
        "gpt-5.2": {
          "name": "GPT 5.2",
          "reasoning": true,
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": ["text", "image", "audio", "video"],
            "output": ["text", "audio"]
          },
          "options": {
            "include": ["reasoning.encrypted_content"],
            "store": false
          },
          "variants": {
            "minimal": {
              "reasoningEffort": "minimal",
              "reasoningSummary": "auto"
            },
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "low"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "high"
            },
            "xhigh": {
              "reasoningEffort": "xhigh",
              "reasoningSummary": "detailed",
              "textVerbosity": "high"
            }
          }
        },
        "gpt-5.2-codex": {
          "name": "GPT 5.2 Codex",
          "reasoning": true,
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": ["text", "image", "audio", "video"],
            "output": ["text", "audio"]
          },
          "options": {
            "include": ["reasoning.encrypted_content"],
            "store": false
          },
          "variants": {
            "minimal": {
              "reasoningEffort": "minimal",
              "reasoningSummary": "auto",
              "textVerbosity": "low"
            },
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            },
            "xhigh": {
              "reasoningEffort": "xhigh",
              "reasoningSummary": "detailed",
              "textVerbosity": "high"
            }
          }
        }
      }
    },
    "zai-coding-plan": {
      "whitelist": ["glm-4.7"],
      "npm": "@ai-sdk/anthropic",
      "options": {
        "baseURL": "https://api.z.ai/api/anthropic/v1"
      },
      "models": {
        "glm-4.7": {
          "reasoning": true,
          "interleaved": true,
          "limit": {
            "context": 200000,
            "output": 128000
          },
          "options": {
            "temperature": 1,
            "top_k": 40,
            "top_p": 0.95,
            "maxOutputTokens": 128000
          },
          "variants": {
            "low": {
              "thinking": {
                "type": "enabled",
                "budgetTokens": 8000
              }
            },
            "medium": {
              "thinking": {
                "type": "enabled",
                "budgetTokens": 24000
              }
            },
            "high": {
              "thinking": {
                "type": "enabled",
                "budgetTokens": 48000
              }
            },
            "max": {
              "thinking": {
                "type": "enabled",
                "budgetTokens": 64000
              }
            }
          }
        }
      }
    },
    "local-proxy": {
      "whitelist": ["gemini-3-pro", "gemini-3-flash", "claude-sonnet-4-5", "claude-opus-4-5"],
      "npm": "@ai-sdk/openai-compatible",
      "name": "Local Proxy",
      "options": {
        "baseURL": "http://localhost:8000/v1",
        "apiKey": "your-api-key",
        "timeout": 300000
      },
      "models": {
        "gemini-3-pro": {
          "id": "gemini-3-pro-preview",
          "name": "Gemini 3 Pro",
          "limit": {
            "context": 1048576,
            "output": 64000
          },
          "reasoning": true,
          "variants": {
            "medium": {
              "disabled": true
            }
          },
          "modalities": {
            "input": ["image", "text"],
            "output": ["text"]
          }
        },
        "gemini-3-flash": {
          "id": "gemini-3-flash-preview",
          "name": "Gemini 3 Flash",
          "limit": {
            "context": 1048576,
            "output": 64000
          },
          "reasoning": true,
          "variants": {
            "medium": {
              "disabled": true
            }
          },
          "modalities": {
            "input": ["image", "text"],
            "output": ["text"]
          }
        },
        "claude-sonnet-4-5": {
          "id": "claude-sonnet-4-5",
          "name": "Claude Sonnet 4.5",
          "limit": {
            "context": 200000,
            "output": 32000
          },
          "reasoning": true,
          "variants": {
            "medium": {
              "disabled": true
            }
          },
          "modalities": {
            "input": ["image", "text"],
            "output": ["text"]
          }
        },
        "claude-opus-4-5": {
          "id": "claude-opus-4-5",
          "name": "Claude Opus 4.5",
          "limit": {
            "context": 200000,
            "output": 32000
          },
          "reasoning": true,
          "variants": {
            "medium": {
              "disabled": true
            }
          },
          "modalities": {
            "input": ["image", "text"],
            "output": ["text"]
          }
        }
      }
    }
  }
}
